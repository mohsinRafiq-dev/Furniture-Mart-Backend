# Production Environment Variables for Backend
# Copy this file to .env and fill in your values

# Server
NODE_ENV=production
PORT=5000

# Database
DB_URI=mongodb+srv://username:password@cluster.mongodb.net/furniture-mart

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRATION=24h

# CORS - Comma-separated list of allowed origins
# Make sure to include your frontend domain
CORS_ORIGIN=https://ashraf-furnitures.vercel.app

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Admin emails (comma-separated)
ALLOWED_ADMIN_EMAILS=admin@furniture-mart.com,editor@furniture-mart.com

# Logging
LOG_LEVEL=combined

# Railway-specific
# These are automatically set by Railway, but you can override if needed
# RAILWAY_STATIC_URL=https://your-railway-url.railway.app
