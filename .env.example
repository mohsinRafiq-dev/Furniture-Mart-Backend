# Environment Configuration
NODE_ENV=development

# Server
PORT=5000
CORS_ORIGIN=http://localhost:3000

# Security - JWT
JWT_SECRET=your-super-secret-key-change-in-production-min-32-chars
JWT_EXPIRATION=24h

# Database - MongoDB Atlas
DB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Google OAuth 2.0
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Admin Configuration
ALLOWED_ADMIN_EMAILS=admin@example.com,editor@example.com
ADMIN_GMAIL_EMAIL=your-gmail@gmail.com
ADMIN_GMAIL_PASSWORD=your-gmail-password
ADMIN_EMAIL=admin@furniture-mart.com
ADMIN_EMAIL_PASSWORD=your-strong-password-min-8-chars

# Logging
LOG_LEVEL=combined

